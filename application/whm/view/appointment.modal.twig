{% block appointment_modal %}
    <div id="appointment-modal"
         class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">

        <div class="modal-body">
            <div id="event-calendar-carousel" class="carousel slide" data-interval="false">
                <ol class="carousel-indicators">
                    <li data-target="#event-calendar-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#event-calendar-carousel" data-slide-to="1"></li>
                </ol>
                <!-- Carousel items -->
                {# WATCHOUT!!! #}
                {# SOME INDICES START WITH 1 INSTEAD OF 0!!! #}
                <div class="carousel-inner">
                    {% for k in 1..2 %}
                        {% if k == 1 %}
                            <div class="active item">
                        {% else %}
                            <div class="item">
                        {% endif %}
                            <legend>Events ({{ "now"|date("M d") }} - {{ "now"|date_modify('+7 days')|date("M d") }})</legend>
                            <table class="table table-bordered">
                                <thead>
                                    {% set weeklength = 7 %}
                                    <tr>
                                        {% for i in 1..weeklength %}
                                            <th>
                                                {{ 7 * (k - 1) + i }} -
                                                {{ "now"|date_modify('+1 days')|date("D")|upper }} -
                                                {{ "now"|date_modify('+7 days')|date("d") }}
                                            </th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {# First get the one day with the maximum amount of events.
                                       This will set the maximum height of the table.
                                       In this example, it is represented by the variable maxevents. #}
                                    {% set maxevents = 4 %}

                                    {% for i in 1..maxevents %}
                                        <tr>
                                            {% for j in 1..weeklength %}
                                                <td>

                                                    {% set maxparticipants = random(50) + 1 %}
                                                    {% set actualparticipants = random(maxparticipants) %}
                                                    {# MAXIMUM TITLE LENGTH IS 10. ELSE IS TRIMMED #}
                                                    {% set eventtitle = random(['Food Basket', 'Christmas',
                                                        'Income Tax', 'School Supply']) %}
                                                    {# DECIDE BUTTON COLOR #}
                                                    {% set availablespots = maxparticipants - actualparticipants %}
                                                    {% set buttoncolor = 'success' %}
                                                    {% if availablespots <= maxparticipants / 10 %}
                                                        {% set buttoncolor = 'danger' %}
                                                    {% elseif availablespots <= maxparticipants / 2 %}
                                                        {% set buttoncolor = 'warning' %}
                                                    {% endif %}

                                                    <button class="btn btn-small btn-{{ buttoncolor }}" type="button"
                                                        {% if availablespots == 0 %} disabled>
                                                            {{ eventtitle }} <br /> Full
                                                        {% else %}
                                                            >
                                                            {{ eventtitle }} ({{ actualparticipants }}/{{ maxparticipants }})
                                                        {% endif %}
                                                    </button>
                                                </td>
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group" data-toggle="buttons-radio">
                <button type="button" class="btn btn-primary active" data-target="#event-calendar-carousel" data-slide-to="0">
                    <i class="icon-calendar icon-white"></i> First Week
                </button>
                <button type="button" class="btn btn-primary" data-target="#event-calendar-carousel" data-slide-to="1">
                    <i class="icon-calendar icon-white"></i> Second Week
                </button>
            </div>
            &nbsp;&nbsp;&nbsp;
            <button class="btn" data-dismiss="modal" aria-hidden="true"> Close</button>
        </div>
    </div>
{% endblock %}
