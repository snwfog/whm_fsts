{% extends 'static/base.twig' %}

{% block content %}


    {% for error in errors %}
        {% block error %}
            <div id="error">{{ error }}</div></br>
        {% endblock %}
    {% endfor %}
    
   <fieldset id="regis"> 
        <legend><h1>Registration</h1></legend>
    <form action="household_create" method="POST" name="household_create">
        <div style = "pers" >
            <h2>Personal Information</h2>
            <ul>

                <li><input type="text" name="first_name" placeholder="First Name" value="{{form["first_name"]}}"/>
                <li><input type="text" name="last_name" placeholder="Last Name" value="{{form["last_name"]}}"/>
                <li><input type="text" name="work_status" placeholder="Work Status" value="{{form["work_status"]}}"/>
                <li><input type="text" name="welfare_number" placeholder="Welfare Number" value="{{form["welfare_number"]}}"/>
                <li><input type="text" name="phone_number" placeholder="Phone Number" value="{{form["phone_number"]}}" />
                <li><input type="text" name="medicare" placeholder="Medicare" value="{{form["medicare"]}}"/>
                <li><input type="text" name="referal" placeholder="Referal" value="{{form["referal"]}}"/>

                <br />

                    <select name ="marital">
                        <option selected disabled>Marital Status</option>
                        <option>Married</option>
                        <option>Single</option>
                        <option>Divorced</option>
                        <option>Widowed</option>
                        <option>Common Law</option>
                    </select>
                <br />
                    {% include 'static/origin.twig' %}

                     <br />

        </ul>
    </div>
        <div style="address">
        <h2>Address</h2>
        <ul>
            <li><input type="text" name="addess" placeholder="Address" value="{{form["address"]}}"/>
            <li><input type="text" name="appt_number" placeholder="Appartment Number" value="{{form["appt_number"]}}" />
             <li><input type="text" name="city" placeholder="City" value="{{form["city"]}}"/>
            <li><input type="text" name="province" placeholder="Province" value="{{form["province"]}}"/>
            <li><input type="text" name="postal_code" placeholder="Postal Code" value="{{form["postal_code"]}}"/>
        </ul>
        </div>
        <input type="hidden" name="household_create_form" value="TRUE" />
        <button class="action blue submit">
            <span class="label">Register</span>
        </button>
    
    </form>
</fieldset>
{% endblock content %}


