{% block create_event_date_part_twig %}
    <fieldset>
    	<legend>Date and Time</legend>
        <div class="controls controls-row" id="name-row">
            <input class="span4" id="dp1" type="text" name="start-date" maxlength="8" placeholder="Start Date" value="{{ event.date }}"/>
            {% if event is null %}
                <input class="span4" id="dp2" type="text" name="end-date" maxlength="8" placeholder="End Date" />
            {% endif %}
            <input class="span2" type="text" name="start-time" placeholder="Start Time" value="{{ event["start-time"] }}"/>
        </div>

        
    </fieldset>
    <script type="text/javascript">
        $('#dp1,#dp2').datepicker()
    </script>
{% endblock create_event_date_part_twig %}