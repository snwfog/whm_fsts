{% block create_event_date_part_twig %}
    <fieldset>
    	<legend>Date and Time</legend>
        <div class="controls controls-row" id="name-row">
            <input class="span4" id="dp1" type="text" name="start-date" maxlength="10" placeholder="Start Date" value="{{ event.date }}"/>
            {% if event is null %}
                <input class="span4" id="dp2" type="text" name="end-date" maxlength="10" placeholder="End Date" />
            {% endif %}
    	    <div class="input-append bootstrap-timepicker" style="margin-left: 10px;">
                <input class="span5 time-add-on" style="margin-left:15px" type="text" id="tp1" name="start-time" placeholder="Start Time" value="{{ event["start-time"] }}"/>
                <span class="add-on"><i class="icon-time"></i></span>
            </div>
        </div>

		<script type="text/javascript">
			$('#dp1,#dp2').datepicker();
			$('#tp1').timepicker({showMeridian: false});
		</script>
        
    </fieldset>

{% endblock create_event_date_part_twig %}