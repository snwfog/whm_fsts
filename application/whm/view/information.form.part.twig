{% block information %}
    <fieldset>
        <legend>Information</legend>
        <div class="controls controls-row">
            <input class="span3" maxlength="{{ 3 * 3 + 2 }}" type="text"
                   name="sin-number" placeholder="Social Insurance" value="{{ household["sin-number"] }}"/>
            <input class="span4" maxlength="{{ 3 * 4 + 2 }}" type="text"
                   name="mcare-number" placeholder="Medical Care" value="{{ household["medicare-number"] }}"/>
            <input class="span1" type="text" name="work_status"
                   placeholder="Work Status" maxlength="2" value="{{ household["work-status"] }}"/>
            <input class="span4" maxlength="{{ 3 * 4 + 2 + 3 }}"
                   type="text" name="welfare-number" placeholder="Welfare Number"
                   value="{{ household["welfare-number"] }}"/>
        </div>

        <div class="controls controls-row">
            <input class="span4" type="text" data-link="country"
                   name="origin" placeholder="Origin" value="{{ household["origin"] }}"/>
            <input class="span4" type="text" data-link="language"
                   name="language" placeholder="Language" value="{{ household["language"] }}"/>
            <input class="span1" type="text" maxlength="1"
                   name="gender" placeholder="Gender" value="{{ household["gender"] }}"/>
            <input class="span3" maxlength="2" type="text"
                   name="marital-status" placeholder="Marital Status" value="{{ household["marital"] }}"/>
            <input type="hidden" value="" name="date-of-birth">
        </div>

        <div class="controls controls-row">
            <input class="span4" type="text"
                   name="referral" placeholder="Referral" value="{{ household.referral }}"/>
            <input class="span5" type="text"
                   name="contact" placeholder="Contact" value="{{ household.contact }}"/>
            <input class="span3" type="text"
                   name="first-visit-date" placeholder="MM-DD-YY" value="{{ household["first-visit-date"] }}"/>
        </div>

        <div class="controls controls-row">
        <input class="span4" type="text"
                   name="income" placeholder="Income" value="{{ household["income"] }}"/>    
        </div> 
    </fieldset>
{% endblock information %}